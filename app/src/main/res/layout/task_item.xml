<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbTaskCompleted"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tvTaskName"
        app:layout_constraintBottom_toBottomOf="@id/tvTaskTime"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTaskName"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cbTaskCompleted"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTaskDescription"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTaskName"
        app:layout_constraintLeft_toRightOf="@id/cbTaskCompleted"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTaskTime"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTaskDescription"
        app:layout_constraintLeft_toRightOf="@id/cbTaskCompleted"/>

</androidx.constraintlayout.widget.ConstraintLayout>